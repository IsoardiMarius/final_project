{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@root/*": ["src/express-web-api/*"],
      "@config/*": ["src/express-web-api/config/*"],
      "@utils/*": ["src/utils/*"],
      "@sequelize/*": ["src/express-web-api/config/storage/sequelize/*"],
      "@exceptions/*": ["src/utils/exceptions/*"]
    }
  },



  "include": ["src/**/*"],
}